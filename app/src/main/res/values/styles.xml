<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FruitTheme">
    </style>

    <!-- 适用于开启滑动返回功能的 Activity -->
    <style name="AppTheme.FruitTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <!--改变指示器下标颜色-->
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@color/tabselectedgray</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="FloatingStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#008dfa</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
